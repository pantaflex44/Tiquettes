{
    "name": "tiquettes",
    "title": "Tiquettes",
    "description": "Générateur d'étiquettes pour tableaux et armoires électriques.",
    "version": "2.2.7",
    "keywords": [
        "étiquette",
        "schéma",
        "tableau",
        "armoire",
        "électrique",
        "électricité",
        "unifilaire",
        "créer",
        "générateur",
        "schneider",
        "hager",
        "legrand"
    ],
    "author": "Christophe LEMOINE",
    "license": "AGPL-3.0",
    "homepage": "https://www.tiquettes.fr/app/",
    "repository": {
        "type": "git",
        "url": "https://github.com/pantaflex44/Tiquettes"
    },
    "type": "module",
    "scripts": {
        "update:all": "npx npm-check-updates -u && npm install",
        "compile": "concurrently \"node ./app-config-compiler.cjs\"",
        "copies": "concurrently \"cpx src/schema_functions.json public/api/libs/toPdf/assets\"",
        "predev": "concurrently \"npm run copies\"",
        "dev": "cross-env NODE_ENV=dev concurrently \"php -S localhost:8080 -t public/api\" \"vite\"",
        "prebuild": "concurrently \"npm run copies\"",
        "build": "cross-env NODE_ENV=ghpages vite build --mode ghpages",
        "prebuild:web": "concurrently \"npm run copies\"",
        "build:web": "cross-env NODE_ENV=web vite build --mode web",
        "prebuild:dev": "concurrently \"npm run copies\"",
        "build:dev": "cross-env NODE_ENV=dev vite build --mode dev",
        "lint": "eslint . --ext js,jsx --report-unused-disable-directives --max-warnings 0",
        "preview": "vite preview --port 8080",
        "generate-pwa-assets": "pwa-assets-generator --preset minimal-2023 public/favicon.svg",
        "gitpush:dev": "func() { git checkout dev && npm run compile && git add . && git commit -m \"$1\" && git push origin dev; }; func",
        "gitmerge:main": "func() { git checkout main && git merge dev -m \"Merge branch dev\" && git push origin main && git checkout dev; }; func"
    },
    "dependencies": {
        "@vite-pwa/assets-generator": "^1.0.2",
        "compare-versions": "^6.1.1",
        "cpx": "^1.5.0",
        "cpx2": "^8.0.0",
        "process": "^0.11.10",
        "react": "^19.2.0",
        "react-color": "^2.19.3",
        "react-dom": "^19.2.0",
        "sanitize-filename": "^1.6.3",
        "semver": "^7.7.3",
        "sharp": "^0.34.5",
        "use-debounce": "^10.0.6",
        "vite-plugin-pwa": "^1.1.0"
    },
    "devDependencies": {
        "@types/react": "^19.2.2",
        "@types/react-dom": "^19.2.2",
        "@vitejs/plugin-react": "^5.1.0",
        "concurrently": "^9.2.1",
        "cross-env": "^10.1.0",
        "eslint": "^9.39.1",
        "eslint-plugin-react": "^7.37.5",
        "eslint-plugin-react-hooks": "^7.0.1",
        "eslint-plugin-react-refresh": "^0.4.24",
        "react-error-overlay": "^6.1.0",
        "vite": "^7.2.1",
        "vite-plugin-open-graph": "^2.0.6",
        "vite-plugin-sitemap": "^0.8.2"
    }
}